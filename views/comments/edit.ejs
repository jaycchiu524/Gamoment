<% include ../partials/header %>

    <div class="row">
        <h1>Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto">
            <!-- only moment id needed, simply pass req.params.id alone instead of retrieving form database -->
            <form action="/moments/<%= moment_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Home</a>
        </div>
        
    </div>

<% include ../partials/footer %>