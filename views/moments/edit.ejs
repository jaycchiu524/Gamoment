<% include ../partials/header %>
<main id="login">
    <h1 style="text-align: center;">EDIT "<%= moment.postname %>"</h1>
    <div class="row">   
        <div style="width: 30%; margin: 25px auto">
            <form action="/moments/<%= moment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= moment.postname %>" name="moment[postname]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Game" name="moment[game]" value="<%= moment.game%>">
                </div>
                <div class="form-group">
                    <select name="moment[genre]" id="edit-select" class="custom-select">
                        <option selected>Genre</option>
                        <option value="RPG">RPG</option>
                        <option value="ARPG">ARPG</option>
                        <option value="JRPG">JRPG</option>
                        <option value="FPS">FPS</option>
                        <option value="RTS">RTS</option>
                        <option value="MOBA">MOBA</option>
                        <option value="MMORPG">MMORPG</option>
                        <option value="Others">Others</option>
                      </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= moment.image%>" name="moment[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= moment.description%>" name="moment[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Home</a>
        </div>
        
    </div>
</main>

<% include ../partials/footer %>